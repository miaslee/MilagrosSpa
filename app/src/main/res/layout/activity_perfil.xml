<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_pink"
    tools:context=".PerfilActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarPerfil"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:title="Perfil"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:backgroundTint="#E91E63"
        app:navigationIcon="@drawable/ic_arrow_back_24" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Cabecera con avatar y botón editar foto -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_user_24"
                        android:background="@android:color/transparent"
                        android:contentDescription="@null"
                        app:tint="#E91E63" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvNombreCabecera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#AD1457"
                            tools:text="Milagros P." />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvCorreoCabecera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="usuario@correo.com" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCambiarFoto"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cambiar foto"
                        app:icon="@drawable/ic_edit_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Datos del cliente -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Datos personales"
                        android:textStyle="bold"
                        android:textColor="#AD1457"
                        android:textSize="16sp" />

                    <!-- Nombre -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilNombrePerfil"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="8dp"
                        android:hint="Nombre y apellido"
                        app:boxBackgroundMode="outline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_user_24"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editNombrePerfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            tools:text="Milagros P." />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Teléfono -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilTelefonoPerfil"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="10dp"
                        android:hint="Teléfono"
                        app:boxBackgroundMode="outline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_phone_24"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTelefonoPerfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:maxLines="1"
                            tools:text="+51 999 999 999" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Correo -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCorreoPerfil"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="10dp"
                        android:hint="Correo"
                        app:boxBackgroundMode="outline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_email_24"
                        app:endIconMode="clear_text"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editCorreoPerfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:autofillHints="emailAddress"
                            android:maxLines="1"
                            tools:text="usuario@correo.com" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Preferencias de notificación -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preferencias de notificación"
                        android:textStyle="bold"
                        android:textColor="#AD1457"
                        android:textSize="16sp" />

                    <!-- Push -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_bell_24"
                            android:tint="#AD1457"
                            android:contentDescription="@null" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Notificaciones push" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchPush"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_email_24"
                            android:tint="#AD1457"
                            android:contentDescription="@null" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Email" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>

                    <!-- SMS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_phone_24"
                            android:tint="#AD1457"
                            android:contentDescription="@null" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="SMS" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchSms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Estado / errores -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textStatusPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="?attr/colorError"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                tools:text="Datos guardados correctamente" />

            <!-- Acciones -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardarPerfil"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="Guardar cambios"
                android:textAllCaps="false"
                app:cornerRadius="14dp"
                app:backgroundTint="#E91E63" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCerrarSesion"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="Cerrar sesión"
                android:textAllCaps="false"
                app:cornerRadius="14dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
