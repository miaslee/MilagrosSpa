<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MisCitasFragment">



    <!-- Tabs Próximas / Pasadas -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutMisCitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:tabIndicatorColor="#E91E63"
        app:tabSelectedTextColor="#E91E63"
        app:tabTextColor="#8E335F">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Próximas" />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pasadas" />
    </com.google.android.material.tabs.TabLayout>

    <!-- Contenido con pull-to-refresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeAppointments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingTop="48dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Lista -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAppointments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                tools:listitem="@layout/item_cita" />

            <!-- Estado vacío -->
            <LinearLayout
                android:id="@+id/emptyStateContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_calendar_24"
                    android:tint="#E91E63"
                    android:contentDescription="@null" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvEmptyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No tienes citas"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#AD1457"
                    android:layout_marginTop="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvEmptySub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuando reserves, aparecerán aquí."
                    android:layout_marginTop="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIrAgendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Agendar cita"
                    app:backgroundTint="#E91E63"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_calendar_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>