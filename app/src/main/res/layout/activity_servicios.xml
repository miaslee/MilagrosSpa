<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_pink">

    <!-- AppBar / Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarServicios"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:title="Servicios"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:backgroundTint="#E91E63"
        app:navigationIcon="@drawable/ic_arrow_back_24" />

    <!-- Contenido -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeServicios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Buscador -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilBuscarServicio"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:hint="Buscar servicio"
                app:startIconDrawable="@drawable/ic_search_24"
                app:boxBackgroundMode="outline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editBuscarServicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    tools:text="facial, masaje, depilación..." />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Filtro por categorías -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fillViewport="false"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupCategorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="false"
                    app:singleLine="true"
                    app:selectionRequired="false">

                    <!-- Chips de ejemplo (puedes quitarlos en runtime) -->
                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facial"
                        app:chipBackgroundColor="@color/material_dynamic_neutral50"/>
                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masajes"/>
                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manos y Pies"/>
                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Depilación"/>
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <!-- Cargando -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressServicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:indicatorColor="#E91E63"
                app:trackColor="#F8BBD0" />

            <!-- Lista de servicios -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvServicios"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                tools:listitem="@layout/item_servicio" />
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
