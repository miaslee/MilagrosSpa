<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_pink">

    <!-- Contenido con scroll para pantallas pequeñas -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Logo -->
            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_success_72"
                android:contentDescription="@null" />

            <!-- Título -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recuperar contraseña"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#C2185B"
                android:letterSpacing="0.02" />

            <!-- Tarjeta del formulario -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Indicaciones -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvInstruccionesReset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingresa tu correo electrónico para enviarte un enlace de restablecimiento."
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />


                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmailReset"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="12dp"
                        android:hint="Correo"
                        app:boxBackgroundMode="outline"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_email_24"
                        app:endIconMode="clear_text"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editEmailReset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:autofillHints="emailAddress"
                            android:maxLines="1"
                            tools:text="usuario@correo.com" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón enviar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEnviarReset"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        android:text="Enviar enlace"
                        android:textAllCaps="false"
                        app:cornerRadius="14dp"
                        app:backgroundTint="#E91E63"
                        app:icon="@drawable/ic_email_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />

                    <!-- Indicador de carga -->
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressReset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        app:trackThickness="4dp"
                        app:indicatorColor="#E91E63"
                        app:trackColor="#F8BBD0" />

                    <!-- Volver a login -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVolverLogin"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:text="Volver a iniciar sesión" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Estado / mensajes -->
            <TextView
                android:id="@+id/textStatusReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textColor="#C62828"
                android:textSize="12sp"
                android:paddingBottom="16dp"
                tools:text="Te enviamos un enlace a tu correo" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
