<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_pink">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarConfirmacion"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:title="Confirmar reserva"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:backgroundTint="#E91E63"
        app:navigationIcon="@drawable/ic_arrow_back_24"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Título -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvConfirmTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completa tu reserva"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="#AD1457"
                android:layout_marginTop="8dp"/>

            <!-- Subtítulo -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvConfirmSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paga el 50% por Yape y sube la captura para asegurar tu cita."
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:layout_marginTop="4dp"
                android:textAlignment="center"/>

            <!-- Tarjeta de detalle de la cita -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDetalleCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Servicio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_services_24"
                            android:contentDescription="@null"
                            app:tint="#AD1457" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvConfServicio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            tools:text="Facial Premium"/>
                    </LinearLayout>

                    <!-- Fecha y hora -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar_24"
                            android:contentDescription="@null"
                            app:tint="#AD1457" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvConfFechaHora"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            tools:text="Lun 07 Oct • 10:30"/>
                    </LinearLayout>

                    <!-- Profesional (opcional) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_person_24"
                            android:contentDescription="@null"
                            app:tint="#AD1457" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvConfProfesional"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            tools:text="Con Ana"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de pago Yape -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago por Yape (50%)"
                        android:textStyle="bold"
                        android:textColor="#AD1457"
                        android:textSize="16sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvMontoTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        tools:text="Total: S/ 100.00" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvDeposito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Deposita: S/ 50.00" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_money_24"
                            app:tint="#AD1457" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvYapeNumero"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Yape: 999 999 999"/>
                    </LinearLayout>

                    <!-- (Opcional) QR del Yape -->
                    <ImageView
                        android:id="@+id/imgQrYape"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginTop="8dp"
                        android:contentDescription="@null"

                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de voucher (captura) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVoucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sube la captura del pago"
                        android:textStyle="bold"
                        android:textColor="#AD1457"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgVoucherPrev"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_main_pink"
                        android:contentDescription="@null"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAdjuntarVoucher"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:text="Adjuntar voucher"

                       app:iconGravity="textStart"
                       app:iconPadding="8dp" />
               </LinearLayout>
           </com.google.android.material.card.MaterialCardView>

           <!-- Progreso -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:indicatorColor="#E91E63"
                app:trackColor="#F8BBD0" />

            <!-- Confirmar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmarReserva"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="Confirmar reserva"
                android:textAllCaps="false"
                app:cornerRadius="14dp"
                app:backgroundTint="#E91E63"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
